<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <%= form_with model: memo, local: true do |f| %>
      <% if memo.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <p class="text-red-900 font-medium">
            <%= memo.errors.full_messages.to_sentence.capitalize %>
          </p>
        </div>
      <% end %>

      <div class="bg-white rounded-lg shadow p-8 border border-slate-200">
        <div class="space-y-6">
          <div class="space-y-2">
            <%= f.label :title, class: "block text-sm font-medium text-slate-900" %>
            <%= f.text_field :title, autofocus: true, class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div class="space-y-2">
            <%= f.label :content, class: "block text-sm font-medium text-slate-900" %>
            <%= f.text_area :content, class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent min-h-40" %>
          </div>
        </div>

        <div class="flex items-center gap-3 mt-8 pt-6 border-t border-slate-200">
          <%= f.submit class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors duration-200" %>
          <%= link_to "Cancel", memos_path, class: "px-6 py-2 bg-slate-200 hover:bg-slate-300 text-slate-900 rounded-lg font-medium transition-colors duration-200" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
