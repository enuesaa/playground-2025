<% content_for :title, "New memo" %>

<%- frame_id = request.headers["Turbo-Frame"] || nil -%>
<% if frame_id.present? %>
  <%= turbo_frame_tag frame_id, data: { controller: "modal" } do %>
    <div class="modal-header">
      <h1>New memo</h1>
      <button type="button" class="modal-close" data-action="click->modal#close">Ã—</button>
    </div>

    <div class="modal-body">
      <%= render "form", memo: @memo %>
    </div>

    <br>

    <div>
      <%= link_to "Back to memos", memos_path, data: { turbo_frame: "_top" } %>
    </div>
  <% end %>
<% else %>
  <div class="modal-header">
    <h1>New memo</h1>
  </div>

  <div class="modal-body">
    <%= render "form", memo: @memo %>
  </div>

  <br>

  <div>
    <%= link_to "Back to memos", memos_path %>
  </div>
<% end %>
